<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.rgcloud.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_register"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/x180"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_phone_register"
            android:hint="请输入11位手机号"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:maxLength="11"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dline"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/x180"
            android:layout_height="wrap_content"
            android:text="昵    称"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_nick_name_register"
            android:hint="请输入昵称"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dline"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/x180"
            android:layout_height="wrap_content"
            android:text="密    码"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_password_register"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:inputType="textPassword"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            android:background="@null"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dline"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="@dimen/x180"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/et_verify_code_register"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:textColor="@color/grey900"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingTop="@dimen/y30"
            android:paddingBottom="@dimen/y30"
            android:background="@null"/>

        <Button
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y70"
            android:id="@+id/btn_verify_code_register"
            android:text="获取验证码"
            android:textSize="9sp"
            android:textColor="@color/grey900"
            android:layout_marginRight="@dimen/x20"/>

    </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btn_register"
    android:text="注册"
    android:textSize="14sp"
    android:textColor="@color/white"
    android:layout_marginLeft="@dimen/x20"
    android:layout_marginTop="@dimen/x120"
    android:layout_marginRight="@dimen/x20"
    android:background="@drawable/shape_primary_blue_corner8"/>


</LinearLayout>
