<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_home_tab"
            android:text="首页"
            android:drawableTop="@drawable/selector_home"
            style="@style/TabNavigationMain"/>

        <TextView
            android:id="@+id/tv_information_tab"
            android:text="资讯"
            android:drawableTop="@drawable/selector_information"
            style="@style/TabNavigationMain"/>

        <TextView
            android:id="@+id/tv_activity_tab"
            android:text="活动"
            android:drawableTop="@drawable/selector_activity"
            style="@style/TabNavigationMain"/>

        <TextView
            android:id="@+id/tv_activity_space_tab"
            android:text="空间"
            android:drawableTop="@drawable/selector_activity_space"
            style="@style/TabNavigationMain"/>

        <TextView
            android:id="@+id/tv_personal_tab"
            android:text="我的"
            android:drawableTop="@drawable/selector_personal"
            style="@style/TabNavigationMain"/>

    </LinearLayout>


</LinearLayout>