<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y88"
    android:background="@color/colorPrimaryBlue">

    <Button
        android:id="@+id/btn_left_include_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x32"
        android:gravity="center_vertical"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@null"
        android:drawableLeft="@mipmap/ic_back"/>


    <TextView
        android:id="@+id/tv_content_include_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_right_include_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x32"
        android:background="@null"
        android:gravity="end|center_vertical"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/img_btn_right_include_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x32"
        android:scaleType="centerCrop"
        android:background="@null"/>

</RelativeLayout>
