<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:padding="@dimen/x20">

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="@dimen/y180"
        android:layout_height="@dimen/y180"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@mipmap/information_temp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_comment_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优雅与高贵并存"
            android:textColor="#595959"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/tv_content_collection_item"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y4"
            android:layout_weight="1"
            android:text="评论内容"
            android:textColor="#575757"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_date_comment_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="2017-9-10 20:23:23"
            android:textColor="@color/grey700"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>