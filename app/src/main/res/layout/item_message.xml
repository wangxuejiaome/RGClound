<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_message_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y26"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginTop="@dimen/y26"
            android:layout_weight="1"
            android:text="消息"
            android:textColor="@color/grey900"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/tv_time_message_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y26"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginRight="@dimen/x22"
            android:layout_marginTop="@dimen/y26"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:text="2012-12-12 21:21:21"
            android:textColor="@color/grey700"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_content_message_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y26"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginTop="@dimen/y26"
            android:layout_weight="1"
            android:text="消息"
            android:textColor="@color/grey700"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>