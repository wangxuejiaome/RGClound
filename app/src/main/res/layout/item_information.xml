<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:paddingBottom="@dimen/y30"
              android:paddingLeft="@dimen/x60"
              android:paddingRight="@dimen/x30"
              android:paddingTop="@dimen/y30">

    <ImageView
        android:id="@+id/iv_information"
        android:layout_width="@dimen/x190"
        android:layout_height="@dimen/y120"
        android:scaleType="centerCrop"
        android:src="@mipmap/information_temp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_information_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优雅与高贵并存"
            android:textColor="@color/grey900"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_time_information_item"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="49分钟钱"
            android:textColor="@color/grey500"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>