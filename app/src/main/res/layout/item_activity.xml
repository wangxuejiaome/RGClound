<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y320"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_activity_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/activity_temp"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/y320"
        android:layout_height="@dimen/y2"
        android:layout_centerInParent="true"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/tv_name_activity_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y4"
        android:text="如皋东大街"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_address_activity_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y4"
        android:drawableLeft="@mipmap/ic_location_white"
        android:drawablePadding="@dimen/x6"
        android:text="江苏省南通市如皋市万寿南路"
        android:textColor="@color/white"
        android:textSize="10sp"/>


    <TextView
        android:id="@+id/tv_preference_type_activity_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="免费"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginBottom="@dimen/y20"
        android:padding="@dimen/x4"
        android:background="@drawable/shape_translucent_corner4"
        />



</RelativeLayout>